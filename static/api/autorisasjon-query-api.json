{
  "swagger" : "2.0",
  "info" : {
    "version" : "v1",
    "title" : "KS Fiks: Autorisasjon Query Service",
    "contact" : {
      "name" : "Fiks brukerstøtte",
      "url" : "http://www.ks.no/fagomrader/utvikling/digitalisering/digitaliseringsstrategien/fiks/",
      "email" : "fiks@ks.no"
    }
  },
  "basePath" : "/api",
  "tags" : [ {
    "name" : "autorisasjon"
  } ],
  "schemes" : [ "https" ],
  "paths" : {
    "/autorisasjon-query/api/autorisasjon/autorisasjoner" : {
      "get" : {
        "tags" : [ "autorisasjon" ],
        "summary" : "Henter et \"autorisasjonskart\" for ressursen. Parametere fungererer som filtre, og er valgfrie. Hvis forelderRessurs ikke er satt settes denne automatisk til ROOT. Denne operasjonen krever \"ADMIN\" privilegier på forelder-ressursen. ",
        "description" : "",
        "operationId" : "getAutorisasjoner",
        "parameters" : [ {
          "name" : "aktor",
          "in" : "query",
          "required" : false,
          "type" : "string"
        }, {
          "name" : "privilegium",
          "in" : "query",
          "required" : false,
          "type" : "string",
          "pattern" : "^[0-9A-Z_.]+$"
        }, {
          "name" : "type",
          "in" : "query",
          "required" : false,
          "type" : "string"
        }, {
          "name" : "forelderRessurs",
          "in" : "query",
          "required" : false,
          "type" : "string",
          "format" : "uuid"
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "type" : "array",
              "uniqueItems" : true,
              "items" : {
                "$ref" : "#/definitions/Autorisasjon"
              }
            }
          }
        }
      }
    },
    "/autorisasjon-query/api/autorisasjon/isAutorisert" : {
      "get" : {
        "tags" : [ "autorisasjon" ],
        "summary" : "Returnerer \"true\" om aktøren er tildelt privilegiet på ressursen, \"false\" om dette ikke er tilfellet",
        "description" : "",
        "operationId" : "isAutorisert",
        "parameters" : [ {
          "name" : "aktor",
          "in" : "query",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "privilegium",
          "in" : "query",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "ressurs",
          "in" : "query",
          "required" : true,
          "type" : "string",
          "format" : "uuid"
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "type" : "boolean"
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "Autorisasjon" : {
      "type" : "object",
      "properties" : {
        "aktor" : {
          "type" : "string"
        },
        "privilegium" : {
          "type" : "string"
        },
        "privilegiumNiva" : {
          "type" : "integer",
          "format" : "int32"
        },
        "ressurs" : {
          "type" : "string",
          "format" : "uuid"
        },
        "ressursNiva" : {
          "type" : "integer",
          "format" : "int32"
        },
        "type" : {
          "type" : "string"
        },
        "path" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/Ressurs"
          }
        }
      }
    },
    "Ressurs" : {
      "type" : "object",
      "required" : [ "id", "type" ],
      "properties" : {
        "id" : {
          "type" : "string",
          "format" : "uuid",
          "description" : "The UUID of the ressurs"
        },
        "type" : {
          "type" : "string",
          "description" : "The type of the ressurs"
        }
      },
      "description" : "Represents a ressurs, which is an entity to which privilegier may be assigned. Ressurser are organized in a hierarchy where any privilegium given to an aktør on a ressurs will also apply for that aktør to all descendants of that ressurs."
    }
  }
}